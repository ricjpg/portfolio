---
import type { TerminalProps } from "../interfaces/interface";

const { title, description } = Astro.props as TerminalProps;
---

<div
  class="bg-zinc-900 text-green-400 font-mono rounded-xl shadow-lg overflow-hidden w-full max-w-6xl mb-5"
>
  <div
    class="flex items-center gap-1 px-4 py-2 bg-zinc-800 border-b border-zinc-700"
  >
    <span class="w-3 h-3 bg-red-500 rounded-full"></span>
    <span class="w-3 h-3 bg-yellow-500 rounded-full"></span>
    <span class="w-3 h-3 bg-green-500 rounded-full"></span>
  </div>
  <div class="p-4 whitespace-pre-wrap">
    <p class="text-2xl font-bold">
      <span class="text-cyan-400">$~</span>
      {title}
    </p>
    <p class="pl-4 text-green-300 font-extralight">{description}</p>
  </div>
</div>
