---
import type {SkillSetProps} from '../interfaces/interface';

const {tittle, skills} = Astro.props as SkillSetProps;
---


<section class="bg-white shadow-md rounded-2xl p-6 w-full max-w-md"> 
<h2 class="text-2xl font-semibold mb-4 text-gray-800">{tittle}</h2>
{skills.map(({name, level})=>(
    <div class="mb-4">
        <div class="flex justify-between mb-1">
            <span class="text-sm font-medium text-gray-700">{name}</span>
        </div>
        
        <div class="w-full bg-gray-200 rounded-full h-3">
            
            <div 
            class=" bg-green-500 h-3 rounded-full transition-all duration-700 ease-linear" 
            style={`width: ${level}%`}
            ></div>
            
        </div>
    </div>
))}
</section>