---
import type { ProjectProps } from "../interfaces/interface";

const { title, description, img, href } = Astro.props as ProjectProps;
import { Image } from "astro:assets";
---

<div
  class="bg-zinc-900 text-green-400 font-mono rounded-xl shadow-lg overflow-hidden w-full max-w-6xl mb-5"
>
  <div
    class="flex items-center gap-1 px-4 py-2 bg-zinc-800 border-b border-zinc-700"
  >
    <span class="w-3 h-3 bg-red-500 rounded-full"></span>
    <span class="w-3 h-3 bg-yellow-500 rounded-full"></span>
    <span class="w-3 h-3 bg-green-500 rounded-full"></span>
  </div>
  <div class="p-4 place-content-center place-items-center self-end my-5">
    <div class="flex-auto place-items-center w-xl h-xl">
      <Image
        src=`/images/${img}`
        alt="Hello Image"
        width={100}
        height={100}
        class="mt-2 mb-10 w-64"
      />
    </div>
    <p class="text-2xl font-bold mb-5">
      <span class="text-cyan-400">$~</span>
      {title}
    </p>
    <div>
      <p class="pl-4 text-green-300 font-extralight">{description}</p>
    </div>
    <div class="mt-10 self-end">
      <a
        href={href}
        class="rounded-full px-3 py-3 bg-gray-100 font-extrabold text-black hover:bg-blue-950 hover:text-white self-end"
        >Learn more</a
      >
    </div>
  </div>
</div>
