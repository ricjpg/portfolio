---
// import { date } from "astro:schema";
import type { ProjectProps } from "../interfaces/interface";

const { title, description, img, href, date } = Astro.props as ProjectProps;
import { Image } from "astro:assets";

const parsedDate = new Date(date); // 'date' es string
const formatted = new Intl.DateTimeFormat("en-EN", {
  year: "numeric",
  month: "long",
})
  .format(parsedDate)
  .replace(" de ", " ");
---

<div
  class="bg-zinc-900 text-green-400 font-mono rounded-xl shadow-lg overflow-hidden w-full max-w-6xl mb-5 flex flex-col h-full"
>
  <div
    class="flex items-center gap-1 px-4 py-2 bg-zinc-800 border-b border-zinc-700"
  >
    <span class="w-3 h-3 bg-red-500 rounded-full"></span>
    <span class="w-3 h-3 bg-yellow-500 rounded-full"></span>
    <span class="w-3 h-3 bg-green-500 rounded-full"></span>
    <span class="ml-2">Project</span>
  </div>
  <div class="flex flex-col flex-grow p-4">
    <span class="mb-2 font-extralight text-xs">Date: {formatted}</span>
    <div class="flex justify-center mb-4">
      <Image
        src={`/images/${img}`}
        alt="Hello Image"
        width={100}
        height={100}
        class="w-64"
      />
    </div>
    <p class="text-2xl font-bold mb-2">
      <span class="text-cyan-400">$~</span>
      {title}
    </p>
    <p class="text-green-300 font-extralight mb-6 pl-4">{description}</p>
    <div class="mt-auto w-full flex justify-center">
      <a
        href={href}
        class="rounded-full px-6 py-2 bg-gray-100 font-extrabold text-black hover:bg-green-500 hover:text-white transition"
      >
        Learn more
      </a>
    </div>
  </div>
</div>
